<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:AvaloniaTest2.Converters"
        xmlns:local="clr-namespace:AvaloniaTest2"
        xmlns:global="clr-namespace:"
        x:Class="AvaloniaTest2.Views.MainWindow"
        Width="1000" Height="600"
        Title="SysAdmin App"
        x:DataType="global:MainWindowViewModel">

    <Window.Resources>
        <converters:BoolToGridLengthConverter x:Key="BoolToGridLengthConverter"
                                              VisibleLength="200" HiddenLength="0" />
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding MenuVisible, Converter={StaticResource BoolToGridLengthConverter}}" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Background="#333" Grid.Column="0">
            <Button Content="☰" Command="{Binding ToggleMenuCommand}" Margin="5" />
            <ListBox ItemsSource="{Binding MenuItems}" SelectedItem="{Binding SelectedMenuItem}" Margin="5">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" Foreground="White" Margin="2" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

        <DockPanel Grid.Column="1">
            <Button Content="☰" DockPanel.Dock="Top" Width="50" Command="{Binding ToggleMenuCommand}" Margin="5" HorizontalAlignment="Left"/>

            <ContentControl Content="{Binding SelectedView}" />
        </DockPanel>
    </Grid>
</Window>