<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AvaloniaTest2.App"
             xmlns:local="using:AvaloniaTest2"
             xmlns:viewModels="clr-namespace:AvaloniaTest2.ViewModels"
             xmlns:views="clr-namespace:AvaloniaTest2.Views"
             RequestedThemeVariant="Default">

    <Application.DataTemplates>
        <DataTemplate DataType="viewModels:FileExplorerViewModel">
            <views:FileExplorer/>
        </DataTemplate>

        <DataTemplate DataType="viewModels:ServersViewModel">
            <views:Servers/>
        </DataTemplate>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme/>
        <Style Selector="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="CaretBrush" Value="Black"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost" Background="Transparent">
                                <TextPresenter x:Name="PART_TextPresenter" Margin="0"/>
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Styles>
</Application>